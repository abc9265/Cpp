/*
	do-while
	하고나서 조건을 살핌
*/

#include <iostream>

using namespace std;

int main()
{
	int selection; // 변수가 밖으로 나와있어야한다.
	
	do
	{
		cout << "1. add" << endl;
		cout << "2. sub" << endl;
		cout << "3. mult" << endl;
		cout << "4. div" << endl;
	} while ( selection <= 0 || selection >= 5);
	
	cout << "You selected " << selection << endl;
	return 0;
}